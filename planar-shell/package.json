{
    "name": "planar-shell",
    "version": "0.0.1",
    "description": "React engine to run planar-ghost artifact from planar-prism flow",
    "main": "./index.html",
    "author": "snowinmars",
    "license": "GPL-3.0-or-later",
    "private": false,
    "type": "module",
    "scripts": {
        "start": "vite",
        "build": "tsc && vite build",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "lint:fix": "eslint . --ext ts,tsx --fix",
        "format": "prettier --write \"src/**/*.{ts,tsx,scss,css,json}\"",
        "format:check": "prettier --check \"src/**/*.{ts,tsx,scss,css,json}\"",
        "preview": "vite preview",
        "_test_comment": "get examples from https://github.com/SingleDraw/react-vite/blob/main/src/components/Counter/Counter.test.tsx",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest --coverage",
        "prepare": "husky install"
    },
    "dependencies": {
        "@emotion/react": "^11.14.0",
        "@emotion/styled": "^11.14.1",
        "@mui/icons-material": "^7.3.8",
        "@mui/material": "^7.3.8",
        "clsx": "^2.1.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.20.1",
        "rxjs": "^7.8.2",
        "use-sync-external-store": "^1.6.0",
        "zustand": "^5.0.11",
        "zustand-di": "^0.0.16"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^6.1.5",
        "@testing-library/react": "^14.1.2",
        "@testing-library/user-event": "^14.5.1",
        "@types/react": "^18.2.43",
        "@types/react-dom": "^18.2.17",
        "@typescript-eslint/eslint-plugin": "^6.14.0",
        "@typescript-eslint/parser": "^6.14.0",
        "@vitejs/plugin-react": "^4.2.1",
        "@vitest/coverage-v8": "^3.2.4",
        "@vitest/ui": "^3.2.4",
        "eslint": "^8.55.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.0.1",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.5",
        "husky": "^8.0.3",
        "jsdom": "^23.0.1",
        "lint-staged": "^15.2.0",
        "prettier": "^3.1.1",
        "sass": "^1.69.5",
        "typescript": "^5.2.2",
        "vite": "^7.1.3",
        "vitest": "^3.2.4"
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{scss,css,json,md}": [
            "prettier --write"
        ]
    }
}
